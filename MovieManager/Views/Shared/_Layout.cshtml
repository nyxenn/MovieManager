<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.flatly.light.css" />
    <link href="~/dist/app.css" rel="stylesheet" />
</head>
<body>
    <div class="page-wrap">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="Content" asp-controller="Home" asp-action="Index">MovieManager</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Content" asp-controller="Search" asp-action="Index">Search</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Content" asp-controller="List" asp-action="Index">Lists</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container" id="app">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MovieManager
            <br />
            &copy; Movie data provided by the <a href="https://www.omdbapi.com/">OMDb API</a>.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/32e727ba59.js" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/dist/app.js"></script>
    <script>
        new Vue({
            el: '#app'
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

<style>
    html, body {
        height: 100%;
    }

    .page-wrap {
        min-height: 100%;
        margin-bottom: -90px;
    }

    .page-wrap:after {
        content: "";
        display: block;
    }

    .footer, .page-wrap:after {
        /* .push must be the same height as footer */
        height: 90px;
    }

    .footer {
        padding: 10px;
    }
</style>