@model ApiMovie

@{
    ViewData["title"] = Model.Title + " - Details";
}


<div class="movie-details">
    <div class="movie-details-main">
        <div class="movie-details-section movie-details-poster">
            <img src="@Model.Poster" alt="@Model.Title" />
        </div>

        <div class="movie-details-section">
            <h2>@Model.Title</h2>
            <h3>
                @if (Model.Type == "series")
                {
                    <span>@Model.Year</span>
                }
                else
                {
                    <span>@Model.Released</span>
                }
            </h3>
            <span>@Model.Plot</span>

            <br /><br />

            <add-to-list title="@Model.Title" type="@Model.Type" />
        </div>
    </div>

    <div class="movie-details-sub">
        <div class="movie-details-section">
            <p>
                <span class="details-title"><b>Actors</b></span><br />
                <span class="details-value">
                    <vc:movie-links links="@Model.Actors" type="person"></vc:movie-links>
                </span>
            </p>

            <p>
                <span class="details-title"><b>Director</b></span><br />
                <span class="details-value">
                    <vc:movie-links links="@Model.Director" type="person"></vc:movie-links>
                </span>
            </p>

            <p>
                <span class="details-title"><b>Writer</b></span><br />
                <span class="details-value">
                    <vc:movie-links links="@Model.Writer" type="person"></vc:movie-links>
                </span>
            </p>
        </div>

        <div class="movie-details-section">
            <p>
                <span class="details-title"><b>Genres</b></span><br />
                <span class="details-value">
                    <vc:movie-links links="@Model.Genre" type="genre"></vc:movie-links>
                </span>
            </p>

            <p>
                <span class="details-title"><b>Runtime</b></span><br />
                <span class="details-value">@Model.Runtime</span>
            </p>

            <p>
                <span class="details-title"><b>imdb Rating</b></span><br />
                <span class="details-value">@Model.imdbRating from @Model.imdbVotes votes</span>
            </p>

            <p>
                <span class="details-title"><b>imdb Page</b></span><br />
                <span class="details-value"><a href="https://www.imdb.com/title/@(Model.imdbID)">@Model.Title</a></span>
            </p>
        </div>
    </div>
</div>

@section Style {
    <style>
        .movie-details {
            width: 100%;
            height: 100%;
            margin-top: 5vh;
            display: flex;
            flex-wrap: wrap;
        }

        .movie-details-main {
            width: 100%;
            min-height: 30vh;
            display: flex;
            flex-wrap: wrap;
        }

        .movie-details-sub {
            width: 100%;
            display: flex;
            flex-wrap: wrap;
            margin-top: 2vh;
        }

        .movie-details-poster {
            text-align: center;
            min-width: 350px;
        }

        .movie-details-section {
            flex: 1;
            min-width: 300px;
        }
    </style>
}
